{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "eas:build:production": "cd apps/mobile && eas build --profile production --non-interactive",
    "eas:build:preview": "cd apps/mobile && eas build --profile preview --non-interactive",
    "eas:build:development": "cd apps/mobile && eas build --profile development --non-interactive",
    "eas:build:production:clean": "npm run clean:mobile && cd apps/mobile && eas build --profile production --non-interactive",
    "clean": "turbo run clean && rm -rf node_modules/.cache .turbo apps/*/node_modules/.cache apps/*/.expo apps/*/dist",
    "clean:mobile": "rm -rf apps/mobile/.expo apps/mobile/dist apps/mobile/node_modules/.cache .turbo"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "version": "1.0.0"
}
