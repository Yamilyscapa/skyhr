# APP
NODE_ENV=development
PORT=8080
BASE_URL=http://localhost:8080
APP_URL=http://localhost:3000

# DB
DATABASE_URL=postgresql://user:password@localhost:5432/skyhr

# BETTER_AUTH
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here
# Use http://localhost:8080 for development, https://your-domain.com for production
BETTER_AUTH_URL=http://localhost:8080
# Comma-separated list of allowed origins
TRUSTED_ORIGINS=http://localhost:3000
# Optional: Set cookie domain for cross-subdomain support (e.g., .yourdomain.com)
# COOKIE_DOMAIN=

# QR PAYLOAD SECRET
# Base64 encoded secret for QR code encryption
QR_SECRET="your-qr-secret-here"

# AWS S3 (for production file storage)
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=your-s3-bucket-name

# RESEND (for email sending)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com
