{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".output/**", ".nitro/**", ".tanstack/**"],
      "env": ["NODE_ENV", "EXPO_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "EXPO_PUBLIC_*"]
    },
    "eas-build": {
      "cache": false,
      "env": ["NODE_ENV", "EXPO_PUBLIC_*", "EAS_BUILD_PROFILE"]
    }
  }
}
